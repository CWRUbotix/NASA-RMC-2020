<?xml version="1.0"?>
<launch>
    <arg name="gui" default="true"/>
    <arg name="rviz" default="true"/>
    <arg name="use_steering" default="true"/>
    <arg name="model" default="$(find glennobi_description)/urdf/glennobi.urdf.xacro"/>
    <arg name="world" default="default"/>
    <arg name="verbose" default="false"/>

    <rosparam command="load" file="$(find glennobi_description)/config/diff_drive.yaml"
              ns="glennobi_diff_drive_controller" />
    <rosparam command="load" file="$(find glennobi_description)/config/joints.yaml"
              ns="glennobi_joint_state_controller" />

    <include file="$(find glenn_launcher)/launch/rviz/rviz.launch" if="$(arg rviz)"/>

    <include file="$(find glennobi_description)/launch/gazebo.launch">
        <arg name="gui" value="$(arg gui)"/>
        <arg name="model" value="$(arg model)"/>
        <arg name="world_name" value="$(find glennobi_description)/worlds/$(arg world).world"/>
        <arg name="verbose" value="$(arg verbose)"/>
    </include>

    <node name="glennobi_controller_spawner" pkg="controller_manager" type="controller_manager" output="screen"
                args="spawn glennobi_diff_drive_controller glennobi_joint_state_controller"/>

    <node name="rqt_robot_steering" pkg="rqt_robot_steering" type="rqt_robot_steering" if="$(arg use_steering)">
    <param name="default_topic" value="/glennobi_diff_drive_controller/cmd_vel"/>
  </node>
</launch>
